<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#70152d47"
                android:endColor="#00152d47"
                android:angle="270"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FAFAFA"/>
            <corners android:radius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp"/>
        </shape>
    </item>
</layer-list>
