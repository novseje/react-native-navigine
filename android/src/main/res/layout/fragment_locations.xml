    <com.reactnativenavigine.CustomEditText
        android:id="@+id/locations_fragment__search_field"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/search_edit_text_selector"
        android:layout_marginTop="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/edit_text_drawable_selector"
        android:drawablePadding="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="Search locations"
        android:textSize="17sp"
        android:singleLine="true"
        android:inputType="textFilter"
